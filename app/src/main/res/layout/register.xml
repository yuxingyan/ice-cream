<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="80dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icream"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regtel"
        android:hint="请输入电话"
        android:numeric="integer"
        android:maxLength="11"
        android:layout_margin="10dp"
        android:drawableLeft="@mipmap/login_username_jpg"
        android:layout_gravity="center_horizontal"
        />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/regusername"
           android:hint="请输入用户名"
           android:inputType="textPostalAddress"
           android:layout_margin="10dp"
           android:drawableLeft="@mipmap/login_password_jpg"
           android:layout_gravity="center_horizontal"
           />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repassword"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:drawableLeft="@mipmap/login_username_jpg"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/againpassword"
        android:inputType="textPassword"
        android:hint="请再次确认密码"
        android:drawableLeft="@mipmap/login_username_jpg"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:hint="请输入地址"
        android:inputType="textPostalAddress"
        android:drawableLeft="@mipmap/login_password_jpg"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
           android:id="@+id/registe"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:text="注册"
           android:textSize="30dp"
           android:background="@drawable/shape"
           android:layout_gravity="center_horizontal"
           />
</LinearLayout>